{
  "name": "lend-remember",
  "version": "1.0.0",
  "description": "System for you do not forget who you lent each thing.",
  "main": "index.js",
  "repository": "https://github.com/alefemoreira/lend-remember-api",
  "author": "alefemoreira",
  "license": "MIT",
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "premigrate": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "migrate": "cross-env NODE_ENV=test sequelize db:migrate",
    "pretest": "yarn migrate",
    "test": "cross-env NODE_ENV=test jest",
    "posttest": "cross-env NODE_ENV=test sequelize db:migrate:undo:all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.0.0",
    "sequelize": "^5.21.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.4",
    "commitlint": "^8.3.5",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.2.4",
    "nodemon": "^2.0.2",
    "sequelize-cli": "^5.5.1",
    "shelljs": "^0.8.4",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
